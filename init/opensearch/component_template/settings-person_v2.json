{
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "max_ngram_diff": 14,
        "analysis": {
          "filter": {
            "my_phonetic": {
              "type": "phonetic",
              "encoder": "double_metaphone",
              "replace": false
            },
            "name_ngram_filter": {
              "type": "ngram",
              "min_gram": 1,
              "max_gram": 15
            }
          },
          "analyzer": {
            "name_standard_analyzer": {
              "tokenizer": "standard",
              "filter": ["lowercase", "asciifolding"]
            },
            "name_phonetic_analyzer": {
              "tokenizer": "standard",
              "filter": ["lowercase", "asciifolding", "my_phonetic"]
            },
            "name_ngram_analyzer": {
              "tokenizer": "standard",
              "filter": ["lowercase", "asciifolding", "name_ngram_filter"]
            }
          }
        }
      }
    }
  },
  "version": 2
}
